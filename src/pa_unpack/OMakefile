# Target
Target		= pa_unpack
Description	= Perl-style type-safe pack/unpack
Version		= 0.1

# Sources
Modules[] =
	Expander
	Pa_unpack
	Template
	TemplateLexer
	TemplateParser

# Library dependencies
Requires[] =
	camlp4.extend
	camlp4.quotations
	sexplib.syntax

# Camlp4
Flags. +=
  $|expander.ml|	= -syntax camlp4o
  $|pa_unpack.ml|	= -pp camlp4of
  $|template.ml|	= -syntax camlp4o

# Build byte-code version for syntax extensions
BYTE_ENABLED		= true
NATIVE_ENABLED		= false

ocaml-library ()
